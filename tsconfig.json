{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@english-tree/frontend/*": ["apps/frontend/*"],
      "@english-tree/backend/*": ["apps/backend/*"],
      "@english-tree/*": ["packages/*"]
    }
  },
  "files": [],
  "references": [
    {
      "path": "./apps/frontend"
    },
    {
      "path": "./apps/backend"
    }
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".expo",
    ".next",
    "build"
  ]
}
